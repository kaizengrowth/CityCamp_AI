# Database
DATABASE_URL=postgresql://user:password@localhost:5435/citycamp_db
DATABASE_HOST=localhost
DATABASE_PORT=5435
DATABASE_NAME=citycamp_db
DATABASE_USER=user
DATABASE_PASSWORD=password

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
OPENAI_API_KEY=your-openai-api-key
GEOCODIO_API_KEY=your-geocodio-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=citycamp-assets

# Redis (for Celery)
REDIS_URL=redis://localhost:6382/0

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# City Data Sources
TULSA_CITY_COUNCIL_API_URL=https://api.tulsacouncil.org
